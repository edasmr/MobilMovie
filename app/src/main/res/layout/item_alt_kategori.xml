<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="recyclerData"
            type="com.mobillium.myapplication.RecyclerData" />
    </data>
    

    
<com.google.android.material.card.MaterialCardView
    
    android:layout_width="match_parent"
    android:id="@+id/cardView1"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:padding="9dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="0dp"
            app:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/listImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:poster_path="@{recyclerData.poster_path}" />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/cardView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:maxLines="1"
                android:text='@{recyclerData.original_title}'
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:maxLines="2"
                    android:text='@{recyclerData.overview}'
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:inputType="date"
                    android:text='@{recyclerData.release_date}'
                    android:tint="#fff"
                    tools:ignore="TextViewEdits" />

                <ImageView
                    android:id="@+id/tikla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/ic_tikla" />


            </RelativeLayout>



        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
</layout>